---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "@i18n/utils";
import type { languages } from "@i18n/ui";

const t = useTranslations(Astro.currentLocale as keyof typeof languages);
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <Link
        href={getRelativeLocaleUrl(Astro.currentLocale || "en", "/")}
        underline={false}
      >
        <div class="font-semibold">
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex gap-1">
        <Link
          href={getRelativeLocaleUrl(Astro.currentLocale || "en", "/blog")}
          underline={false}
        >
          {t("nav.blog")}
        </Link>
      </nav>
    </div>
  </Container>
</header>
